{
    "manifest_version": 2,
    "name": "Utilidades Ah Negão",
    "version": "0.2.0",
    "description": "Adiciona funcionalidades, utilidades e zoeiras no blog Ah Negão!",
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "permissions": [
        "storage",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.ahnegao.com.br/*"
            ],
            "js": [
                "assets/vue.min.js",
                "inject/inject.js"
            ],
            "css": [
                "inject/inject.css"
            ]
        }
    ],
    "background": {
        "scripts": [
            "bg/background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_popup": "popup/popup.html"
    },
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    }
}